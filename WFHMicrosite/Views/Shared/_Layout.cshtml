<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WFHMicrosite</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="navbar-brand" style="font-size:large">
                @if (ViewBag.Logo != null)
                {
                    <img src="data:image;base64,@System.Convert.ToBase64String(@ViewBag.Logo)" style="width:35%; height:35%" />
                }
                @if (ViewBag.Logo2 != null)
                {
                    @Html.Raw("&nbsp;&nbsp;&nbsp;&nbsp;")<img src="data:image;base64,@System.Convert.ToBase64String(@ViewBag.Logo2)" style="width:45%; height:45%" />
                }
                </div>
            <div class="container-fluid">&nbsp;</div>
            <div class="navbar-brand"><img src="~/images/Logo.png" style="width:100%; height:100%" /></div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderSection("head", required: false)
            @RenderBody()
        </main>
    </div>

    <footer class="container-fluid footer text-muted">
        <div id="copyRite" style="color:white; font-size:xx-small">
            &copy; @DateTime.Now.Year - Allseating Corporation. All Rights Reserved.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
