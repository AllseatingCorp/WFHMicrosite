<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"] - WFHMicrosite</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-sm-2">
                <div style="width:50%">
                    <img src="data:image;base64,@System.Convert.ToBase64String(@ViewBag.Logo)" style="width:65%; height:65%" />
                    @if (ViewBag.Logo2 != null)
                    {
                    @Html.Raw("&nbsp;&nbsp;&nbsp;&nbsp;")<img src="data:image;base64,@System.Convert.ToBase64String(@ViewBag.Logo2)" style="width:65%; height:65%" />
                    }
                </div>
                <div style="width:50%; text-align:right">
                    <img src="~/images/Logo.png" style="width:90%; height:90%" />
                </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderSection("head", required: false)
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
